{{!
    @template tool_lifecycle/overview_step

    Presentation of lifecycle step in overview.

    Example context (json):
    {
        "instancename": "Triggername",
        "subpluginname": "adminapprove",
        "selected": true,
        "showdetails": true,
        "automatic": true,
        "additionalinfo": "---",
        "showdetails": 1,
        "id": 1,
        "numberofcourses": 5,
        "actionmenu": "actionmenu",
        "popuplink": "admin/tool/lifecycle/workflowoverview.php?wf=1"
    }
}}
{{#steps}}
    <div class="wf-arrow"></div>
    <div class="workflow-step workflow-item {{#selected}}wf-selected{{/selected}}">
        <div class="wf-header">
            <div class="wf-header-text">
                <a href="{{{editlink}}}" data-toggle="tooltip" title="{{instancename}}">{{#shortentext}} 50, {{instancename}} {{/shortentext}}</a>
                {{#rollbacktosortindex}}
                    <a href="#" data-toggle="tooltip" title="{{#str}} rollbacktotitle, tool_lifecycle, {{rollbacktosortindexname}} {{/str}}" class="badge badge-secondary ml-1">
                        {{rollbacktosortindex}}
                    </a>
                {{/rollbacktosortindex}}
                <br>
                <span class="text-muted" style="font-size: 0.9em">{{subpluginname}}</span>
            </div>
            <div class="wf-actionmenu">
                {{{ actionmenu }}}
            </div>
        </div>
        <div class="wf-content">
            {{#numberofcourses}}
                <a href="{{{popuplink}}}&step={{id}}&showdetails={{showdetails}}">
                    {{#str}} courses {{/str}}: {{numberofcourses}}
                </a>
            {{/numberofcourses}}
            {{^numberofcourses}}
                {{#str}} courses {{/str}}: {{numberofcourses}}
            {{/numberofcourses}}
        </div>
    </div>
{{/steps}}
