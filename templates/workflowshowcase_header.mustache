{{!

    @template tool_lifecycle/workflowshowcase_header

    This template renders the bulk edit switch in view.php.

    Example context (json):
    {
        "uploadlink": "/uploadworkflow.php?sesskey=sssss",
        "filtertriggerselect": "<select>Trigger select</select>"
        "filterstepselect": "<select>Step select</select>"
    }
}}
<div class="mb-3">
        <a href="{{{uploadlink}}}" class="btn btn-primary" data-toggle="tooltip" title="{{#str}} upload{{/str}} {{#str}} workflow, tool_lifecycle {{/str}}">
            {{#pix}} i/cloudupload, core {{/pix}}{{#str}} upload {{/str}} {{#str}} workflow, tool_lifecycle {{/str}}
        </a>

        <span class="ml-4">
            <span class="d-inline-block mr-2">{{#str}} filter {{/str}}:</span>
            <span class="d-inline-block mr-2">{{#str}} trigger, tool_lifecycle {{/str}} {{{filtertriggerselect}}}</span>
            <span class="d-inline-block mr-2">{{#str}} step, tool_lifecycle {{/str}} {{{filterstepselect}}}</span>
            <span class="d-inline-block btn btn-secondary" id="lifecycle-filter-resetbutton">{{#str}} reset {{/str}}</span>
        </span>

</div>
