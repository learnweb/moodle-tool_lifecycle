{{!

    @template tool_lifecycle/editswitch

    This template renders the bulk edit switch in view.php.

    Example context (json):
    {
        "url": "http://localhost/",
        "sesskey": "sesskey",
        "bulk": 1,
        "checked": "",
        "string": "Bulk edit on",
        "legacyseturl": "page.php",
        "uniqueid": "remaining"
    }
}}
<form action="{{{legacyseturl}}}" method="post" name="{{formid}}form">
    <div class="text-end d-block text-nowrap">
        <label class="mb-0 {{#checked}}text-primary{{/checked}}" for="{{uniqid}}-editingswitch">
            {{#str}} bulkedit, tool_lifecycle {{/str}}
        </label>
        <span class="check input">
            <input type="checkbox" {{#checked}}checked{{/checked}}
                   name="setmode"
                   class="form-check-input"
                   id="{{uniqid}}-editingswitch"
                >
        </span>
    </div>
    <input type="hidden" name="bulkedit" value="{{{bulk}}}">
    <input type="hidden" name="sesskey" value="{{{sesskey}}}">
    <noscript>
        <input type="submit" value="{{#str}}bulkedit, tool_lifecycle{{/str}}">
    </noscript>
</form>
{{#js}}
require(['tool_lifecycle/edit_switch'], function(editSwitch) {
    editSwitch.init('{{uniqid}}-editingswitch', '{{formid}}');
});
{{/js}}
