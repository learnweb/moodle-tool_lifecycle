{{!
    @template tool_lifecycle/overview_timetrigger

    Trigger course selection run presentation

    Example context (json):
    {
        "instancename": "Triggername",
        "subpluginname": "adminapprove",
        "classfires": "my-2",
        "showcoursecounts": true,
        "automatic": true,
        "additionalinfo": "Last run: 1.1.2000",
        "actionmenu": "actionmenu"
    }
}}
{{#timetrigger}}
    <div class="workflow-trigger {{classfires}}">
        <div class="wf-header {{^showcoursecounts}}noshowcoursecounts{{/showcoursecounts}}">
            <div class="wf-header-text">
                <a href="{{{editlink}}}" data-toggle="tooltip" title="{{instancename}}">{{#shortentext}} 50, {{instancename}} {{/shortentext}}</a><br>
                <span class="text-muted" style="font-size: 0.9em">{{subpluginname}}</span>
            </div>
            <div class="wf-actionmenu">
                {{{ actionmenu }}}
            </div>
        </div>
        {{#showcoursecounts}}
            <div class="wf-content">
                {{{additionalinfo}}}
            </div>
        {{/showcoursecounts}}
    </div>
{{/timetrigger}}
