<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/lifecycle/step/deletebackup/db" VERSION="20260123" COMMENT="XMLDB file for Moodle tool/lifecycle"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="tool_lifecycle_deletebackup_log" COMMENT="Saves log data about course backup deletions.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the course the backup(s) belongs to"/>
        <FIELD NAME="stepid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the step by which the deletion was triggered"/>
        <FIELD NAME="files" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Number of backup files that have been deleted"/>
        <FIELD NAME="timestampdeleted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="timestamp of the backup's deletion"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>